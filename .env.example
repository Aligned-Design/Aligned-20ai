# Supabase Configuration (Required)
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# AI Provider Configuration (Required for AI features)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
AI_PROVIDER=auto

# Application Environment
NODE_ENV=development
PORT=8080
VITE_APP_URL=http://localhost:8080
VITE_API_BASE_URL=http://localhost:8080/api
CLIENT_URL=http://localhost:5173

# Builder.io Configuration
# Get these from your Builder.io dashboard: Account Settings â†’ API Keys
# Public key: Used by frontend SDK to load Builder.io content
# Private key: Used by backend for webhook verification and API calls
# Webhook secret: Generate a random string for webhook signature verification
VITE_BUILDER_PUBLIC_KEY=your-builder-public-key-here
BUILDER_PRIVATE_KEY=your-builder-private-key-here
BUILDER_WEBHOOK_SECRET=your-webhook-secret-here

# Frontend Configuration
VITE_ANALYTICS_ID=your-analytics-id

# Social Media Platform API Credentials (Required for Analytics Sync)
# Instagram
INSTAGRAM_BUSINESS_ACCOUNT_ID=your-instagram-business-account-id
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token

# Facebook
FACEBOOK_PAGE_ID=your-facebook-page-id
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token

# Twitter/X
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
TWITTER_ACCOUNT_ID=your-twitter-account-id

# TikTok
TIKTOK_BUSINESS_ACCOUNT_ID=your-tiktok-business-account-id
TIKTOK_ACCESS_TOKEN=your-tiktok-access-token

# LinkedIn
LINKEDIN_ORGANIZATION_ID=your-linkedin-organization-id
LINKEDIN_ACCESS_TOKEN=your-linkedin-access-token

# Pinterest
PINTEREST_BUSINESS_ACCOUNT_ID=your-pinterest-business-account-id
PINTEREST_ACCESS_TOKEN=your-pinterest-access-token

# YouTube
YOUTUBE_CHANNEL_ID=your-youtube-channel-id
YOUTUBE_API_KEY=your-youtube-api-key

# Google Business (Google My Business)
GOOGLE_BUSINESS_ACCOUNT_ID=your-google-business-account-id
GOOGLE_API_KEY=your-google-api-key

# Snapchat
SNAPCHAT_BUSINESS_ACCOUNT_ID=your-snapchat-business-account-id
SNAPCHAT_ACCESS_TOKEN=your-snapchat-access-token

# Socket.io Configuration (Optional for Real-time Features)
SOCKETIO_CORS_ORIGIN=http://localhost:5173
SOCKETIO_RECONNECTION_DELAY=1000
SOCKETIO_RECONNECTION_DELAY_MAX=5000

# Email Service Configuration (PHASE 9)
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_SERVICE_PROVIDER=sendgrid
EMAIL_FROM_ADDRESS=noreply@example.com

# Web Crawling Configuration
CRAWL_MAX_PAGES=50
CRAWL_TIMEOUT_MS=30000
CRAWL_USER_AGENT=AlignedAIBot/1.0 (+contact: hello@aligned-by-design.com)

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn
ENABLE_SENTRY=false
